@import "nib"
@import "_guide"

section.post-page
  padding 0px 25px
  max-width 96.0rem
  margin-top 0

  hr
    padding 0
    border none
    border-top 1px solid #CCC
    color #CCC
    text-align center

  a
    color #0084FF
    text-decoration none
    padding-bottom 4px
    opacity .5

    &:hover
      opacity 1

  .comments
    margin-top 6.0rem

  .post
    color #616161

    h2
      font-weight normal

    h4, h5
      color #646464
      text-decoration none
      margin 0
      clear both

    strong
      font-size 20px

    iframe, img
      box-shadow 0px 0px 3px #949493
      display block
      margin 0 auto
      margin-bottom 20px
      max-width 100%

    .instapaper_title
      font-size 30px
      line-height 40px
      text-align center

    .instapaper_body
      font-size 1.8rem
      line-height 32px

    .inline_code_block
      width 50%
      float left
      min-width 440px
      
      &:after
        visibility hidden
        display block
        font-size 0
        content " "
        clear both
        height 0

    .preamble
      text-align center
      color #999999

      .date
        clear both

      .stats
        font-size 0
        position relative
        height 55px
        margin 0 auto

        hr
          position absolute
          top 30px
          width 100%
          z-index -1
          border-style solid
          border-color #E6E6E6
          border-width 0px
          border-top-width 1px

        .entry
          margin 0 auto
          display inline-block
          font-size 0
          width 50px
          position relative
          left -8px
          margin-right 10px

        a
          float left
          height 0
          position relative
          padding 10px
          top 20px
          padding-left 16.7px

          div
            width 16.7px
            height 15px
            min-height 3px
            opacity .8

            &.added, &.modified, &.deleted
              background #B7CEBB
              position absolute
              left 0
              bottom 8px

            &.added
              bottom 8px

            &.modified 
              background #AFC9D5
              left 16.7px

            &.deleted
              background #C2938C
              left 33.4px

      .pipe
        background #0084FF
        height 5px
        width 10px
        position relative
        display inline-block
        top -14px
