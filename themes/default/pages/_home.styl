@import "_guide"

section.home-page
  text-align center
  font-style normal
  font-weight 700

  .posts
    list-style none
    margin 0
    padding 0

    &:not(:hover) li.post:first-child
      opacity 1

    &:hover li.post
      opacity .4

    .post
      opacity .4
      padding-left 10px
      padding-right 10px

      transition-property opacity
      transition-duration .5s

      &:hover
        opacity 1 !important

      h2
        font-size 24px
        font-weight normal
        line-height 40px
        color #444
        margin-bottom 10px
        margin-top 10px

      a
        padding-top 10px
        padding-bottom 10px
        text-decoration none
        display block

      .date
        font-weight bold
        font-size 16px
        color #000
        margin-bottom 10px
        display inline-block
