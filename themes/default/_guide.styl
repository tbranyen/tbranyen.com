/*-- Globals. ---------------------------------------------------------------*/

global-max-width = 100%

/*-- Root (HTML). -----------------------------------------------------------*/

root-background = #FFFFFF
root-font-size = 62.5%

/*-- Base (BODY). -----------------------------------------------------------*/

base-color = #333333
base-font-size = 1.7rem
base-font-style = normal
base-font-weight = 100
base-font-family = "museo-slab", Georgia, serif
base-line-height = 1.625

/*-- Header (HEADER). -------------------------------------------------------*/

header-background = #F0F0F0
header-color = #333333
header-anchor-color = #646464
header-font-size = 1.5rem
//header-background = #E5F2FF
//header-color = #65787A
//header-anchor-color = #506274
header-anchor-hover-border-bottom = 0.3rem solid #FFF

/*-- Navigation (NAV). ------------------------------------------------------*/

nav-anchor-color = #646464
nav-divider-color = #D8d8D8

/*-- Footer (FOOTER). -------------------------------------------------------*/

footer-anchor-color = #0084FF
