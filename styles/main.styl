// Prefixing and easier CSS3.
@import "nib"

// Include a clearfix.
@import "/styles/clearfix.css"

// Reset styles.
@import "/styles/normalize.css"

// Syntax highlighting.
@import "/styles/zenburn.css"

#container
  font-family "Georgia", "Times New Roman", Helvetica, Arial, sans-serif

  header
    color #CCC
    background #444
    padding 15px
    line-height 28px
    font-size 14px
    border-bottom 2px solid #7A7A7A
    box-shadow 0px 3px 3px #E9E9E9
    
    .inner-header
      text-align center
      max-width 1175px
      margin 0 auto

    a
      color #FFF
      text-decoration none
      padding-bottom 4px

      &:hover
        border-bottom 3px solid #FFA500

  section
    &.post-page
      max-width 960px
      padding 0px 25px
      margin 0 auto

      /* Glyph, by Harry Roberts */
      hr
        padding 0
        border none
        border-top medium double #CCC
        color #CCC
        text-align center

        &.post-clear
          margin-bottom 60px

        &:after
          content ""
          display inline-block
          background white
      
      a
        color #0084FF
        text-decoration none
        padding-bottom 4px
        text-transform lowercase

        &:hover
          color #FFCD55
          border-bottom 2px solid #FFA500

      .post
        color #616161

        h2
          font-weight normal

        h4, h5
          font-weight normal
          margin 0
          color #000

        strong
          font-size 20px

        .preamble
          text-align center
          color #888
          opacity .4
          transition opacity .5s linear

          &:hover
            opacity 1

        .instapaper_title
          font-size 30px
          line-height 40px
          text-align center

        .instapaper_body
          font-size 21px
          line-height 32px
          text-align justify
          text-justify kashida
          letter-spacing 1px
        
        code
          color #333
          background #EEE
          font-family Courier
          font-size 13px
          line-height 18px
          padding 8px 10px
          position relative
          top -3px
          letter-spacing auto

        pre code
          color #FFF
          font-family Courier
          font-size 13px
          background #444
          padding 20px
          line-height 18px
          box-shadow 0px 0px 10px #CCC
          margin-bottom 25px
          overflow auto
          letter-spacing auto

    &.home-page
      text-align center
      padding-top 20px;

      .posts
        list-style none
        margin 0
        padding 0

        &:not(:hover) li.post:first-child
          opacity 1

        &:hover li.post
          opacity .4

        .post
          padding-bottom 10px
          margin-bottom 30px
          opacity .4
          border-bottom 1px solid #CCC
          padding-left: 10px;
          padding-right: 10px;

          transition-property opacity
          transition-duration .5s

          &:hover
            opacity 1 !important

          &:last-child
            border-bottom 2px solid #7A7A7A
            box-shadow 0px 3px 3px #E9E9E9

          h2
            font-size 24px
            font-weight normal
            line-height 40px
            color #444
            margin-bottom 10px
            margin-top 10px

          a
            text-decoration none
            display block

          .date
            font-weight bold
            font-size 16px
            color #919191
            margin-bottom 10px
            display inline-block

  footer
    font-size 16px
    margin-bottom 40px
    margin-top 20px
    width 100% !important
    color #333
    text-align center

    a
      color #75BCFE
      text-decoration none
      font-weight bold

      &:hover
        color #FFA500
