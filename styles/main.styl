// Prefixing and easier CSS3.
@import "nib"

// Grid framework and normalization.
@import "fluidity"

// Syntax highlighting.
@import "zenburn.css"

#container
  grid()

  header
    color #CCC
    background-color #444
    text-align center
    padding 15px
    line-height 28px
    font-size 14px
    font-family HelveticaNeue, 'Helvetica Neue', Helvetica, Arial, sans-serif

    a
      color #FFF
      text-decoration none

      &:hover
        border-bottom 3px solid #FFA500

  section.home-page
    text-align center
    padding-top 20px;

    .posts
      list-style none
      margin 0
      margin-left 15px

      &:not(:hover) li.post:first-child
        opacity 1

      &:hover li.post
        opacity .4

      .post
        padding-bottom 10px
        margin-bottom 30px
        opacity .4
        border-bottom 1px solid #CCC

        transition-property: opacity;
        transition-duration: .5s;

        &:hover
          border-bottom 1px solid #FFA500
          opacity 1 !important

        h2
          font-size 32px
          line-height 40px
          color #444
          margin-bottom 10px
          margin-top 10px
          font-weight normal
          font-family "Georgia", "Times New Roman", Helvetica, Arial, sans-serif

        a
          text-decoration none
          display block

        .date
          text-transform uppercase
          font-weight bold
          font-size 16px
          color #CCC
          margin-bottom 10px
          display inline-block

  footer
    font-size 16px
    margin-bottom 40px
    margin-top 20px
    width 100% !important
    color #333
    text-align center

    a
      color #75BCFE
      text-decoration none
      font-weight bold

      &:hover
        color #FFA500
